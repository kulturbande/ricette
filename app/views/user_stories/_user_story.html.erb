<li id="user-story-<%= user_story.id %>" class="user-story-item hover-action">
  <div class="row">
      <div class="story span8"><%= user_story.story %></div>
    </div>
  <div class="row">
      <div class="action span3 offset5">
          <%= link_to "Edit", edit_project_user_story_path(@project, user_story), :remote => true, :class => 'btn' %>
          <%= link_to 'Destroy', [@project, user_story], :confirm => 'Are you sure?', :method => :delete, :remote => true, :class => 'btn danger' %>
      </div>
  </div>
</li>