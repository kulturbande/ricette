<li class="user-story-form">
  <%= form_for([@project, user_story], :remote => true) do |f| %>
  <% if user_story.errors.any? %>
      <% user_story.errors.full_messages.each do |msg| %>
          <div class="alert-message error" data-alert="alert">
            <a class="close" href="#">Ã—</a>
            <p><%= msg %></p>
          </div>
      <% end %>
  <% end %>
    <div class="row">
        <div class="span8">
            <div class="clearfix">
              <%= f.label :story %>
              <div class="input"><%= f.text_area :story, {:rows => 4, :cols => 40} %></div>
            </div>
        </div>
  </div>
  <div class="actions">
      <%= f.submit :class =>"btn primary" %>
      <%= link_to "Close", {}, :class => "close-form btn" %>
  </div>
<% end %>
</li>